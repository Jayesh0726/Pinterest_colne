<%- include('./partials/header', { customStyles: '/stylesheets/style.css' }) %>
 <div class="main-page">
<div class="container1">  
  <% imageUrls.forEach(function(imageUrl) { %>
    <div class="box">
      <img src="<%= imageUrl %>" alt="image">
    </div>
  <% }); %>
</div> 
 <div class="darker"></div>
    <div class="container" style="left: 50%;">
        <div class="content">
          <!--pinterest logo-->
           
          <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
          <p class="header">Log in to see more</p>
          <% if(error.length > 0) { %>
            <p class="error"><%= error %></p>
          <% } %>
         <form action="/login" method="post">
          <input type="text" name="username" placeholder="User Name" class="detail" /><br />
          <div class="passwod">
          <input type="password" name="password" placeholder="Password" id="passwordField" class="detail" />
          <i class="toggle-password ri-eye-off-fill" style="top: 50%;" onclick="togglePasswordVisibility()"></i>
          </div>
          <input type="submit" class="btn int" value="Login My Account">
        </form> 

          <a class="forget_password" href="/forgot">Forgot your password?</a>
          <p class="or">OR</p>
          <button class="btn fbk">
            <i
            class="ri-meta-fill"
              style="color: white; padding-right: 20px">
            </i>
            <a href="#">Continue with Meta</a></button>
          <br/>
          <button class="btn ggl">
            <i
            class="ri-google-fill"
              style="color: white; padding-right: 10px">
            </i>
            <a href="#">Continue with Google</a>
          </button>
    
          <footer>
            <p>
              By continuing, you agree to Pinterest's
              <b>Terms of Service, Privacy policy.</b>
            </p>
            <hr />
            <p>Not on Pinterest yet? <a href="/">Sign up</a></p>
          </footer>
        </div>
      </div>
      <a href="/" class="upbtn" style="top: 10vh;">Sign up</a>
</div>
<%- include('./partials/footer', {customScript: '/javascripts/script.js'}) %>

